<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders made</title>
    <link href="/css/shoppingCard2.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        h3 {
            text-align: center;
            margin-top: 23px;
        }

        .graph {
            position: absolute;
            top: 5px;
            right: 2px;
        }
    </style>

</head>

<body>
    <h3>Orders made by customers</h3>
    <h3 class="graph"><a href="/seller/graph">See Graph</a></h3>
    <div class="items">

    </div>
    <script>
        function getOrders() {
            fetch('/seller/order/list')
                .then(response => response.json())
                .then(data => {
                    console.log(data)
                    if (data.length === 0) {
                        document.querySelector('.items').innerHTML = `<p style='text-align:center;margin-top:10px;'>No orders made by customers yet.</p>`
                    }
                    else {
                        getDetailsOfOrder(data)
                    }

                })
        }
        let orderItems = []
        function getDetailsOfOrder(data) {
            for (let i = 0; i < data.length; i++) {
                fetch(`/seller/item/${data[i].id}`)
                    .then(response => response.json())
                    .then(content => {
                        data[i]['name'] = content[0]['name']
                        data[i]['image'] = content[0]['image']
                        orderItems.push(data[i])
                        if (data.length === orderItems.length) {
                            displayOrderItems(orderItems)
                        }
                    })
            }

        }
        let titles = ['name', 'buyerName', 'buyerEmail', 'price', 'quantity', 'date']
        let titleNames = ['Name of the Product', 'Customer Name', 'Customer Email', 'Price of the Product', 'Quantity', 'Date Purchased']
        function displayOrderItems(data) {
            let itemsDiv = document.querySelector('.items')
            itemsDiv.innerHTML = ""
            for (let i = 0; i < data.length; i++) {
                let itemDiv = document.createElement('div')
                itemDiv.className = 'item'
                let imgDiv = document.createElement('div')
                let img = document.createElement('img')
                img.className = 'item-image'
                img.src = `/uploads/${data[i].image}`
                imgDiv.appendChild(img)
                itemDiv.appendChild(imgDiv)
                let contentDiv = document.createElement('div')
                contentDiv.className = 'item-content'
                for (let j = 0; j < titles.length; j++) {
                    let p = document.createElement('p')
                    let title = titles[j]
                    if (title === 'price') {
                        p.innerHTML = `<b>${titleNames[j]}</b> : Rs ${data[i][title]}`
                    }
                    else if (title === 'date') {
                        let dt = new Date(data[i][title])
                        p.innerHTML = `<b>${titleNames[j]}</b> : ${dt.toString()}`
                    }
                    else {
                        p.innerHTML = `<b>${titleNames[j]}</b> : ${data[i][title]}`
                    }

                    contentDiv.appendChild(p)
                }
                itemDiv.appendChild(contentDiv)
                itemsDiv.appendChild(itemDiv)
            }
        }

        getOrders()
    </script>
</body>

</html>